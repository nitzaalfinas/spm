<form class="pt10 pr10 pb10 pl10" id="indikator_form">
	<table>
		<tr>
			<td>
				ID
			</td>
			<td>
				<input type="text" name="id" value="<%= @indikator.id %>" />
			</td>
		</tr>

		<tr>
			<td>
				Nama Bidang
			</td>
			<td>
				<select name="bidang_id" onchange="admIndikator.optJenisPelayanan();">
					<% @bidangs.each do |u| %>
						<% if (@indikator.bidang_id == u.id) %>
							<option value="<%= u.id %>" selected><%= u.nama_bidang %></option>
						<% else %>
							<option value="<%= u.id %>"><%= u.nama_bidang %></option>
						<% end %>					
					<% end %>
				</select>
			</td>
		</tr>

		<tr>
			<td>
				Nama Jenis Pelayanan
			</td>
			<td>
				<select name="jenis_pelayanan_id">
					<% @jepels.each do |x| %>
						<% if (@indikator.jenis_pelayanan_id == x.id) %>
							<option value="<%= x.id %>" selected><%= x.jenis_pelayanan_nama %></option>
						<% else %>
							<option value="<%= x.id %>"><%= x.jenis_pelayanan_nama %></option>
						<% end %>					
					<% end %>
				</select>
			</td>
		</tr>

		<tr>
			<td>
				Nama Indikator
			</td>
			<td>
				<input type="text" name="nama_indikator" value="<%= @indikator.nama_indikator %>" />
			</td>
		</tr>

		<tr>
			<td>
				Nilai (%)
			</td>
			<td>
				<input type="text" name="nilai_default" value="<%= @indikator.nilai_default %>" />
			</td>
		</tr>

		<tr>
			<td>
				Batas Waktu (Tahun)
			</td>
			<td>
				<input type="text" name="batas_waktu_default" value="<%= @indikator.batas_waktu_default %>" />
			</td>
		</tr>

		<tr>
			<td></td>
			<td align="right">
				<input type="submit" class="button tiny" value="Simpan" onclick="admIndikator.formSave(<%= @indikator.id %>);return false;">
			</td>
		</tr>
	</table>
</form>
