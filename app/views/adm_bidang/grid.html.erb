<table id="adm_bidang_grid" 
    class="easyui-datagrid" 
    data-options="method: 'GET', border: false, fit:true, pageSize: 20"
    singleSelect="true"
    url="/adm/bidangs/grid/data"
    rownumbers="true" 
    toolbar="#adm_bidang_toolbar"
    pagination="true">
    <thead>
        <tr>
            <th field="id" sortable="true" width="40" hidden="true">ID</th>
            <th field="action" formatter="admBidang.actions" align="center">Action</th>
            <th field="nama_bidang" sortable="true">Nama Bidang</th>
        </tr>
    </thead>
</table>
<div id="adm_bidang_toolbar" style="display: table; padding: 5px 10px; width: 100%;">
    <a href="#" class="button small" onclick="admBidang.createWindow(0);" >
        Tambah
    </a>
</div>
    