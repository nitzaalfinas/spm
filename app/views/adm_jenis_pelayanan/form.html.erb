<form class="pt10 pr10 pb10 pl10">
	<table>
		<tr>
			<td>
				ID
			</td>
			<td>
				<input type="text" name="id" value="<%= @jepel.id %>" />
			</td>
		</tr>

		<tr>
			<td>
				Nama Bidang
			</td>
			<td>
				<select name="bidang_id">
					<% @bidangs.each do |u| %>
						<% if (@jepel.bidang_id == u.id) %>
							<option value="<%= u.id %>" selected><%= u.nama_bidang %></option>
						<% else %>
							<option value="<%= u.id %>"><%= u.nama_bidang %></option>
						<% end %>					
					<% end %>
				</select>
			</td>
		</tr>
		<tr>
			<td>
				Nama Jenis Pelayanan
			</td>
			<td>
				<input type="text" name="jenis_pelayanan_nama" value="<%= @jepel.jenis_pelayanan_nama %>" />
			</td>
		</tr>
		<tr>
			<td></td>
			<td align="right">
				<input type="submit" class="button tiny" value="Simpan" onclick="admJenisPelayanan.formSave(<%= @jepel.id %>);return false;">
			</td>
		</tr>
	</table>
</form>
