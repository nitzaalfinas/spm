<div style="height: 300px; width: 100%; display: table;">
    <table id="dgpera_<%= @indikator_id.to_s %>" 
        class="easyui-datagrid" 
        data-options="method: 'GET', border: false, fit:true, pageSize: 20"
        singleSelect="true"
        url="/admkk/indi/pera/grid_data/child_data",
        rownumbers="true"
        pagination="true">
        <thead>
            <tr>
                <th field="tahun" sortable="true">Tahun</th>
                
                <!-- 72 -->
                <% if(@indikator_id.to_s == '72') %>
                <th field="k1_1" sortable="true" editor="{type:'numberbox'}">
                    <%= judul_field('k1_1') %>
                </th>
                <th field="k1_2" sortable="true" editor="{type:'numberbox'}">
                    <%= judul_field('k1_2') %>
                </th>
                <th field="k1_3" sortable="true" editor="{type:'textbox'}">
                    <%= judul_field('k1_3') %>
                </th>
                <% end %>

                <!-- 73 -->
                <% if(@indikator_id.to_s == '73') %>
                <th field="k2_1" sortable="true" editor="{type:'numberbox'}">
                    <%= judul_field('k2_1') %>
                </th>
                <th field="k2_2" sortable="true" editor="{type:'numberbox'}">
                    <%= judul_field('k2_2') %>
                </th>
                <th field="k2_3" sortable="true" editor="{type:'textbox'}">
                    <%= judul_field('k2_3') %>
                </th>
                <% end %>

                <!-- 74 -->
                <% if(@indikator_id.to_s == '74') %>
                <th field="k3_1" sortable="true" editor="{type:'numberbox'}">
                    <%= judul_field('k3_1') %>
                </th>
                <th field="k3_2" sortable="true" editor="{type:'numberbox'}">
                    <%= judul_field('k3_2') %>
                </th>
                <th field="k3_3" sortable="true" editor="{type:'textbox'}">
                    <%= judul_field('k3_3') %>
                </th>
                <% end %>

            </tr>
        </thead>
    </table>
</div>
    
<script type="text/javascript">
$(document).ready(function(){
    $('#dgpera_<%= @indikator_id.to_s %>').edatagrid({
        url: '/admkk/indi/pera/grid_data/child_data',
        updateUrl: '/admkk/indi/pera/grid_data/child_update'
    });
});
</script>