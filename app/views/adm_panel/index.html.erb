    },
    formSaveInsert: function(id) {
        var data = $('#theForm form').serialize();

        var theUrl = "/adm/penggunas/form/save_insert";
        
        $.ajax({
            url: theUrl,
            data: data,
            type: 'POST',
            success: function(response) {
                $('#theForm').window('close');
                $('#adm_pengguna_grid').datagrid('reload');
            }
        });
    },
