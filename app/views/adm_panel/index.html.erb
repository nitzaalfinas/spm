var xcore = {
	addTab: function(title,url,id) {
        if ($('#main_tab').tabs('exists', title)) {
            $('#main_tab').tabs('select', title);
        } else {
            var content = 'added tab';
            $('#main_tab').tabs('add', {
                id: id,
                title: title,
                content: content,
                closable: true,
                href: url
            });
        }
    },
    keluar: function() {
        $.ajax({
            url: '/users/sign_out',
            type: 'DELETE',
            success: function() {
                window.location.reload();
            }
        });
    }
};

